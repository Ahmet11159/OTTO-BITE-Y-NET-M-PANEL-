      {
        "type": "bullet",
        "text": "Esnetmek"
      },
      {
        "type": "bullet",
        "text": "Suistimal etmek"
      },
      {
        "type": "bullet",
        "text": "Kendi lehine yorumlamak"
      },
      {
        "type": "emphasis",
        "text": "kabul edilemez."
