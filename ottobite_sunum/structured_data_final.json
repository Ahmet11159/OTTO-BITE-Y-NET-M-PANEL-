      {
        "type": "bullet",
        "text": "Sürekli şikâyet etmek"
      },
      {
        "type": "bullet",
        "text": "Yakınmak"
      },
      {
        "type": "bullet",
        "text": "Uflamak, puflamak"
      },
      {
        "type": "bullet",
        "text": "Yüz mimikleriyle ima yapmak"
      },
      {
        "type": "emphasis",
        "text": "kesinlikle kabul edilemez."
      },
      {
        "type": "subheader",
        "text": "Garsonun yüz ifadesi ve beden dili;"
      },
      {
        "type": "bullet",
        "text": "Misafire"
      },
      {
        "type": "bullet",
        "text": "Takım arkadaşlarına"
      },
      {
        "type": "bullet",
        "text": "Operasyona"
      },
      {
        "type": "text",
        "text": "olumsuz yansır."
      }
